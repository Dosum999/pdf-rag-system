# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=pdf_rag_db

# Server
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Docreader gRPC
DOCREADER_HOST=localhost
DOCREADER_PORT=50051

# LLM API - Ollama (LOCAL, COMPLETELY FREE)
LLM_API_BASE_URL=http://host.docker.internal:11434/v1
LLM_API_KEY=ollama
LLM_MODEL=llama3.1

# Embedding Model - Ollama (LOCAL, COMPLETELY FREE)
EMBEDDING_API_URL=http://host.docker.internal:11434/v1
EMBEDDING_API_KEY=ollama
EMBEDDING_MODEL=nomic-embed-text

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB

# Vector Search
VECTOR_DIMENSION=768
SEARCH_TOP_K=5

# Chunking
CHUNK_SIZE=500
CHUNK_OVERLAP=50
